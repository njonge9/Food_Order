<% content_for :title, t('.title') %>

<layout-columns class="columns is-centered">
    <layout-column class="is-5 mt-6 m-4 p-5 box column">
        <h1 class="title has-text-centered">
            <%= t('.title')%>
        </h1>

        <%= form_with(
            model: @user,
            url: users_password_reset_path(params[:id]),
            method: :patch,
            class: 'is-flex is-flex-direction-column'
        ) do |f|%>
            <div class="block">
                <%= f.label :password,class: "label"%>
                <%= f.password_field :password, class: 'input' %>
            </div>

            <%= f.submit t('.submit'), class: 'button is-primary is-align-self-flex-end mb-3 mt-3'%>
        <% end %>
    </layout-column>
</layout-columns>
